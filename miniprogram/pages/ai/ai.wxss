/* miniprogram/pages/ai.wxss */
.item-text{
  margin: 15px auto;
}
.item-img{
  margin: 30px auto;
}
.item-img-boder{
  margin: 30px auto;
  border: 1px dashed;
}
.desc{
  width:266px;
  height:20px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(170,170,170,1);
  line-height:20px;
}
.img{
  width: 300px;
  height: 300px;
}
.cloud-upload-img{
  width: 27px;
  height: 27px;
  padding-right: 5px;
}
.cloud-upload-text{
  width:42px;
  height:27px;
  font-size:18px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:27px;
  letter-spacing:2px;
  padding-left: 5px;
}

.item-upload{
  width:100%;
  height:94px;
  background:rgba(49,114,238,1);
  position: absolute;
  bottom: 0;
}

.item-cloud{
  margin: auto;
  display: flex;
}

.item-cloud-img{
  width: 50%;
  padding-top: 20px;
}

.item-result{
  margin: auto;
  width:60%;
  display: flex;
}
.item-result-err{
  margin: auto;
  width:60%;
}
.item-result-view{
  height: 28px;
  border: 1px solid rgba(151,151,151,1);
  text-align: center;
  line-height:28px;
  margin-right: 10px;
  display: flex;
}
.item-result-view-err{
  height: 28px;
  border: 1px solid rgba(151,151,151,1);
  text-align: center;
  line-height:28px;
  color: red;
}
.item-result-text{
  margin: auto;
  height:20px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:20px;
  padding: 4px;
}

.item-result-text-err{
  margin: 2px;
  height:20px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:red;
  line-height:20px;
}

.item-cloud-line{
  padding-top: 20px;
}


.cloud-line{
  width: 185px;
  height: 8px;
  background-color: black;
  border-radius: 10px;
}

